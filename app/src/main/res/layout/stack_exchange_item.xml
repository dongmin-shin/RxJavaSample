<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stack_exchange_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/stack_exchange_card_view_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/stack_exchange_card_view_profile"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stack_exchange_card_view_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/stack_exchange_card_view_profile"
                android:text="Name"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/stack_exchange_card_view_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/stack_exchange_card_view_name"
                android:layout_toRightOf="@id/stack_exchange_card_view_profile"
                android:text="City"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/stack_exchange_card_view_reputition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/stack_exchange_card_view_city"
                android:layout_toRightOf="@id/stack_exchange_card_view_profile"
                android:text="Reputition"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>